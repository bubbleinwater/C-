	while(cin>>val1>>val2)
	{
		if (val2 < val1)cout << "the smaller value is: " << val2 << "  the larger value is: " << val1 << "\n";
		else if (val1 < val2)cout << "the smaller value is: " << val1 << "  the larger value is: " << val2 << "\n";
		else cout << " the numbers are equal.\n";
	}

	keep_window_open();
	return 0;
}

