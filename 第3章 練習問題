//練習問題2.

#include "../../std_lib_facilities.h"

int main()
{
	cout << "kmに変換します。単位がマイルの値を入力してください。\n";
	double length;
	cin >> length;

//mileをkmに変換して出力
	cout << length << "mileは" << length * 1.609 << "kmです。\n";

	keep_window_open();
	return 0;
}

//練習問題4.

#include "../../std_lib_facilities.h"

void sizeofnumber(int big, int small)
{
	cout << "大きい方の数は" << big
		<< "\n小さい方の数は" << small
		<< "\n差は" << big-small << "です。\n";
}
int main()
{
	int val1, val2;
	cout << "整数値を2つ入力してください。\n";
	while (cin >> val1 >> val2)
	{
		if (val1 < val2)
			sizeofnumber(val2, val1);
		else if (val1 > val2)
			sizeofnumber(val1, val2);
		else
			cout << "二つの数の大きさは等しいです。\n";
		double ratio = 1.0*val1 / val2;

		cout << "合計は" << val1 + val2
			<< "\n積は" << val1 * val2
			<< "\n比率は" << ratio << "です。\n";
	}
	keep_window_open();//ループを抜けるために入力した
	return 0;			//文字がこちらにも使われる。
}

練習問題5.

#include "../../std_lib_facilities.h"

int main()
{
	double val1, val2, difference = 0;
	cout << "整数を２つ入力して下さい\n";
	cin >> val1 >> val2;

	if (val1 > val2) {
		cout << "最小値は" << val2 << "最大値は" << val1 << "です\n";
		difference = val1 - val2;
	}

	else if (val1 < val2) {
		cout << "最小値は" << val1 << "最大値は" << val2 << "です\n";
		difference = val2 - val1;
	}
	else
		cout << "二つの値は等しいです\n";

	cout << "二つの値の合計は" << val1 + val2 << "です\n";
	cout << "二つの値の差は" << difference << "です\n";
	cout << "二つの値の積は" << val1*val2 << "です\n";
	cout << "比率は" << val1 / val2 << "です。\n";
	
	return 0;
}


練習問題6.

#include "../../std_lib_facilities.h"

int main()
{
	cout << "整数値を3つ入力してください。\n";
	int val1, val2, val3;
	while (cin >> val1 >> val2 >> val3)
	{

		int tmp;
		if (val1 > val2)
		{
			tmp = val1;
			val1 = val2;
			val2 = tmp;
		}
		if (val2 > val3)
		{
			tmp = val2;
			val2 = val3;
			val3 = tmp;
		}
		if (val1 > val2)
		{
			tmp = val1;
			val1 = val2;
			val2 = tmp;
		}

		cout << "(" << val1 << "," << val2 << "," << val3 << ")\n";

	}

	keep_window_open();
	return 0;
}

練習問題 7.

#include "../../std_lib_facilities.h"

int main()
{
	string val1, val2, val3,tmp;

	cout << "文字列を3つ入力してください\n";

	cin >> val1 >> val2 >> val3;

	if (val1 > val2) {
		tmp = val2; val2 = val1; val1 = tmp;
		if (val2 > val3) {
			tmp = val3; val3 = val2; val2 = tmp;
			if (val1 > val2) {
				tmp = val1; val1 = val2; val2 = tmp;
			}
		}
	}
	else if (val2 > val3) {
		tmp = val3; val3 = val2; val2 = tmp;
		if (val1 > val2) {
			tmp = val1; val1 = val2; val2 = tmp;
		}
	}

	cout << "(" << val1 << "," << val2 << "," << val3 << ")";

	return 0;
}


練習問題 8.

#include "../../std_lib_facilities.h"

int main()
{
	int number = 0;
	int oper = 0;

	cout << "整数を一つ入力してください\n";

	cin >> number;
	oper = number % 2;
	
	if (oper == 0)
		cout << number << " is an even number\n";
	else
		cout << number << " is an odd number\n";

	return 0;
}

　練習問題　9.

#include "../../std_lib_facilities.h"

int main()
{
	string oper;
	cout << "英単語を数字に変換します数字の英単語を入力してください\n";

	cin >> oper;

	if (oper == "zero") {
		cout << "That is" << 0 <<'\n';
	}

	else if (oper == "one") {
		cout << "That is" << 1 <<'\n';
	}

	else if (oper == "two") {
		cout << "That is" << 2 <<'\n';
	}

	else if (oper == "three") {
		cout << "That is" << 3 <<'\n';
	}

	else if (oper == "four") {
		cout << "That is" << 4 <<'\n';
	}

	else {
		cout << "not a number I know\n";
	}
	return 0;
}

練習問題 10.
#include "../../std_lib_facilities.h"

int main()
{
	cout << "望む演算と、演算したい数字二つを順に入力してください\n";

	string operation = " ";
	double val1, val2;
	cin >> operation >> val1 >> val2;

	if (operation == "+")
		cout << val1 << " " << operation << " " << val2 << " is " << val1 + val2 << "\n";    //should "is" been replaced by "equals"?
	else if (operation == "-")
		cout << val1 << " " << operation << " " << val2 << " is " << val1 - val2 << "\n";
	else if (operation == "*")
		cout << val1 << " " << operation << " " << val2 << " is " << val1 * val2 << "\n";
	else if (operation == "/")
		cout << val1 << " " << operation << " " << val2 << " is " << val1 / val2 << "\n";
	else if (operation == "plus")
		cout << val1 << " " << operation << " " << val2 << " is " << val1 + val2 << "\n";
	else if (operation == "minus")
		cout << val1 << " " << operation << " " << val2 << " is " << val1 - val2 << "\n";
	else if (operation == "mul")
		cout << val1 << " multiplied by " << val2 << " is " << val1 * val2 << "\n";
	else if (operation == "div")
		cout << val1 << " divided by " << val2 << " is " << val1 / val2 << "\n";

	return 0;
}
練習問題 11.
#include "../../std_lib_facilities.h"

int main()
{
	int penny = 0;
	int nickel = 0;
	int dime = 0;
	int quarter = 0;
	int half_dollar = 0;
	int dollar = 0;
	cout << "How many pennies do you have? :";
	cin >> penny;
	cout << "How many nickels do you have? :";
	cin >> nickel;
	cout << "How many dimes do you have? :";
	cin >> dime;
	cout << "How many quarters do you have? :";
	cin >> quarter;
	cout << "How many half dollars do you have? :";
	cin >> half_dollar;
	cout << "How many dollars do you have? :";
	cin >> dollar;
	cout << '\n';
	if (penny)
		cout << "You have " << penny << " pennies.\n";
	if (nickel)
		cout << "You have " << nickel << " nickels.\n";
	if (dime)
		cout << "You have " << dime << " dimes.\n";
	if (quarter)
		cout << "You have " << quarter << " quarters.\n";
	if (half_dollar)
		cout << "You have " << half_dollar << " half dollars.\n";
	if (dollar)
		cout << "You have " << dollar << " dollars.\n";

	cout << "The value of all of your coins is " << penny + (nickel * 5) + (dime * 10)
		+ (quarter * 25) + (half_dollar * 50) + (dollar * 100) << " cents.\n";

	return 0;
}
練習問題　11-2
#include "../../std_lib_facilities.h"

int main()
{
	int penny = 0;
	int nickel = 0;
	int dime = 0;
	int quarter = 0;
	int half_dollar = 0;
	int dollar = 0;
	int sum = 0;
	int dollar_sum = 0;
	int cent_sum = 0;

	cout << "How many pennies do you have? :";
	cin >> penny;
	cout << "How many nickels do you have? :";
	cin >> nickel;
	cout << "How many dimes do you have? :";
	cin >> dime;
	cout << "How many quarters do you have? :";
	cin >> quarter;
	cout << "How many half dollars do you have? :";
	cin >> half_dollar;
	cout << "How many dollars do you have? :";
	cin >> dollar;
	cout << '\n';
	if (penny == 1)
		cout << "You have " << penny << " penny.\n";
	else
		cout << "You have " << penny << " pennies.\n";
	if (nickel == 1)
		cout << "You have " << nickel << " nickel.\n";
	else
		cout << "You have " << nickel << " nickels.\n";
	if (dime == 1)
		cout << "You have " << dime << " dime.\n";
	else
		cout << "You have " << dime << " dimes.\n";
	if (quarter == 1)
		cout << "You have " << quarter << " quarter.\n";
	else
		cout << "You have " << quarter << " quarters.\n";
	if (half_dollar == 1)
		cout << "You have " << half_dollar << " half dollar.\n";
	else
		cout << "You have " << half_dollar << " half dollars.\n";
	if (dollar == 1)
		cout << "You have " << dollar << " dollar.\n";
	else
		cout << "You have " << dollar << " dollars.\n";

	sum = penny + (nickel * 5) + (dime * 10)
		+ (quarter * 25) + (half_dollar * 50) + (dollar * 100);
	//cout << "sum is" << sum << ".\n";                                                    //check

	if (sum == 0)
		cout << "oh,you have no money.\n";
	else if (sum == 1)
		cout << "The value of all of your coins is 1 cent.\n";
	else if (100 > sum && sum > 1)
		cout << "The value of all of your coins is" << sum << " cents.\n";
	else if (sum >= 10*10) {											//if sum is greater than 100.
		cent_sum = sum % 100;                                       //now Im about trying to use "%"
		dollar_sum = (sum - cent_sum)/100;
		if (dollar_sum == 1) {
			if (cent_sum <= 1)
				cout << "The value of all of your coins is " << dollar_sum << " dollar " << cent_sum << " cent.\n";
			else
			{
				cout << "The value of all of your coins is " << dollar_sum << " dollar " << cent_sum << " cents.\n";
			}
		}
		else {
			if (cent_sum <= 1)
				cout << "The value of all of your coins is " << dollar_sum << " dollars " << cent_sum << " cent.\n";
			else
				cout << "The value of all of your coins is " << dollar_sum << " dollars " << cent_sum << " cents.\n";
		}
	}

	return 0;
}
