#include "std_lib_facilities.h"

int main()
{
	cout << "整数値を2つ入力してください。|を入力すると繰り返しを終了します。\n";
	int val1, val2;

	while(cin>>val1>>val2)
	{
		cout <<' '<< val1 << "と" << val2 << "が入力されました。\n";
	}

	keep_window_open();
	return 0;
}


ドリル2.3.

#include "../../std_lib_facilities.h"

int main()
{

	int val1, val2;
	cout << "入力された2つの整数を小さい順に表示します。|を入力すると終了します。\n";

	while (cin >> val1 >> val2) {
		if (val1 > val2) {
			cout << "the smaller value is: " << val2 << ", the larger value is: " << val1 << '\n';
		}
		else if (val1 < val2) {
			cout << "the smaller value is: " << val1 << ", the larger value is: " << val2 << '\n';
		}
		else
			cout << "the numbers are equal\n";
	}
	return 0;
}


