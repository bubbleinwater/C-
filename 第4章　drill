ドリル 5.

#include "../../std_lib_facilities.h"

int main()
{

	double val1, val2;
	cout << "入力された2つの整数を小さい順に表示します。|を入力すると終了します。\n";

	while (cin >> val1 >> val2) {
		if (val1 > val2) {
			cout << "the smaller value is: " << val2 << ", the larger value is: " << val1 << '\n';
			if (val1 - val2 < 1.0 / 100)
				cout << "the numbers are almost equal\n";
		}
		else if (val1 < val2) {
			cout << "the smaller value is: " << val1 << ", the larger value is: " << val2 << '\n';
			if (val2 - val1 < 1.0 / 100)
				cout << "the numbers are almost equal\n";
		}
		else  {
			cout << "the numbers are equal\n";
		}
		
	}
	return 0;
}

ドリル 6.

#include "../../std_lib_facilities.h"

int main()
{

	double val1 = 0;
	double max,mini;

	cout << "入力された数字の最大と最小を追跡します。|を入力すると終了します。\n";

	for (int i = 0; cin >> val1; ++i) {
		if (i == 0) {
			max = val1;
			mini = val1;
		}
		else if (i != 0 && val1 > max) {
			max = val1;
			cout << "the largest so far\n";
		}
		else if (i != 0 && val1 < mini) {
			mini = val1;
			cout << "the smallest so far\n";
		}
		else {}
		
	}
	return 0;
}

ドリル 7.

#include "../../std_lib_facilities.h"

int main()
{

	double val1 = 0;
	string unit;
	double max,mini;

	cout << "入力された	長さの最大と最小を追跡します。単位は(cm,m,in,ft)の4つに限ります。|を入力すると終了します。\n";

	for (int i = 0; cin >> val1 >> unit; ++i) {

		if (unit == "cm") {
			val1 *= 0.01;
		}
		else if(unit =="m"){}
		else if (unit == "in") {
			val1 *= 0.0254;
		}
		else if (unit == "ft") {
			//1ft == 12in == 12*0.0254m
			constexpr double fttom = 12 * 0.0254;
			val1 *= fttom;
		}


		if (i == 0) {
			max = val1;
			mini = val1;
		}
		else if (i != 0 && val1 > max) {
			max = val1;
			cout << "the longest so far\n";
		}
		else if (i != 0 && val1 < mini) {
			mini = val1;
			cout << "the shortest so far\n";
		}
		else {}
		
	}
	return 0;
}


ドリル 8.

#include "../../std_lib_facilities.h"

double maxv = 0, miniv = 0;

void otherdenyer(int i,double val2)
{
	if (i == 0) {
		maxv = val2;
		miniv = val2;
	}
	else if (i != 0 && val2 > maxv) {
		maxv = val2;
		cout << "the longest so far\n";
	}
	else if (i != 0 && val2 < miniv) {
		miniv = val2;
		cout << "the shortest so far\n";
	}
	else {}
}


int main()
{
	double val1 = 0;
	string unit;

	cout << "入力された長さの最大と最小を追跡します。単位は(cm,m,in,ft)の4つに限ります。|を入力すると終了します。\n";

	for (int i = 0; cin >> val1 >> unit; ++i) {
	
		if (unit == "cm") {
			val1 *= 0.01;
			unit = " ";
			otherdenyer(i, val1);
		}
		else if(unit =="m"){ 
			{}
			unit = " "; 
			otherdenyer(i, val1);
		}
		else if (unit == "in") {
			val1 *= 0.0254;
			unit = " ";	
			otherdenyer(i, val1);
		}
		else if (unit == "ft") {
			//1ft == 12in == 12*0.0254m
			constexpr double fttom = 12 * 0.0254;
			val1 *= fttom;
			unit = " ";
			otherdenyer(i, val1);
		}
		else {
			cout << "Denied.Please enter another length followed by(cm,m,in,ft).\n";
			if (i == 0) {
				i = -1;                                                        //I thought "Is --i better?"but it won't last. so I wrote this. 
			}
			else {}
		}
	}
	return 0;
}

ドリル 9.

#include "../../std_lib_facilities.h"

double maxv = 0, miniv = 0,sum = 0;

void otherdenyer(int i,double val2)
{
	if (i == 0) {
		maxv = val2;
		miniv = val2;
	}
	else if (i != 0 && val2 > maxv) {
		maxv = val2;
		cout << "the longest so far\n";
	}
	else if (i != 0 && val2 < miniv) {
		miniv = val2;
		cout << "the shortest so far\n";
	}
	else {}
}


int main()
{
	int j = 0;
	double val1 = 0;
	string unit;

	cout << "入力された長さをｍに変換し最大値と最小値を追跡します。単位は(cm,m,in,ft)の4つに限ります。|を入力すると終了します。終了後に、最小値と最大値と値の個数と値の合計を書き出します。\n";

	for (int i = 0; cin >> val1 >> unit; ++i) {

		if (unit == "cm") {
			val1 *= 0.01;
			sum += val1;
			unit = " ";
			otherdenyer(i, val1);
		}
		else if(unit =="m"){ 
			{}
			sum += val1;
			unit = " "; 
			otherdenyer(i, val1);
		}
		else if (unit == "in") {
			val1 *= 0.0254;
			sum += val1;
			unit = " ";	
			otherdenyer(i, val1);
		}
		else if (unit == "ft") {
			//1ft == 12in == 12*0.0254m
			constexpr double fttom = 12 * 0.0254;
			val1 *= fttom;
			sum += val1;
			unit = " ";
			otherdenyer(i, val1);
		}
		else {
			cout << "Denied.Please enter another length followed by(cm,m,in,ft).\n";
			--i;
			}
		j = i;
	}
	cout << "最小値は" << miniv << "m, 最大値は" << maxv << "m, 値の個数は" << j + 1 << ", 値の合計は" << sum << "mです。\n";
	return 0;
}

ドリル 10.

#include "../../std_lib_facilities.h"


double maxv = 0, miniv = 0,sum = 0;

void otherdenyer(int i,double val2)
{


	if (i == 0) {
		maxv = val2;
		miniv = val2;
	}
	else if (i != 0 && val2 > maxv) {
		maxv = val2;
		cout << "the longest so far\n";
	}
	else if (i != 0 && val2 < miniv) {
		miniv = val2;
		cout << "the shortest so far\n";
	}
	else {}


}


int main()
{
	int j = 0;
	double val1 = 0;
	string unit;
	vector <double> length;

	cout << "入力された長さの最大と最小を追跡します。単位は(cm,m,in,ft)の4つに限ります。|を入力すると終了します。\n";

	for (int i = 0; cin >> val1 >> unit; ++i) {

		if (unit == "cm") {
			val1 *= 0.01;
			length.push_back(val1);
			sum += val1;
			unit = " ";
			otherdenyer(i, val1);
		}
		else if(unit =="m"){ 
			{}
			length.push_back(val1);
			sum += val1;
			unit = " "; 
			otherdenyer(i, val1);
		}
		else if (unit == "in") {
			val1 *= 0.0254;
			length.push_back(val1);
			sum += val1;
			unit = " ";	
			otherdenyer(i, val1);
		}
		else if (unit == "ft") {
			//1ft == 12in == 12*0.0254m
			constexpr double fttom = 12 * 0.0254;
			val1 *= fttom;
			length.push_back(val1);
			sum += val1;
			unit = " ";
			otherdenyer(i, val1);
		}
		else {
			cout << "Denied.Please enter another length followed by(cm,m,in,ft).\n";
			--i;
			}
		j = i;
	}

	cout << "最小値は" << miniv << "m, 最大値は" << maxv << "m, 値の個数は" << j + 1 << ", 値の合計は" << sum << "mです。\n";
	cout << "入力された値を全て書き出します。\n";
	for (double x : length) {
		cout << x << '\n';
	}
	return 0;
}

ドリル 11.

#include "../../std_lib_facilities.h"


double maxv = 0, miniv = 0,sum = 0;

void otherdenyer(int i,double val2)
{


	if (i == 0) {
		maxv = val2;
		miniv = val2;
	}
	else if (i != 0 && val2 > maxv) {
		maxv = val2;
		cout << "the longest so far\n";
	}
	else if (i != 0 && val2 < miniv) {
		miniv = val2;
		cout << "the shortest so far\n";
	}
	else {}


}


int main()
{
	int j = 0;
	double val1 = 0;
	string unit;
	vector <double> length;

	cout << "入力された長さの最大と最小を追跡します。単位は(cm,m,in,ft)の4つに限ります。|を入力すると終了します。\n";

	for (int i = 0; cin >> val1 >> unit; ++i) {

		if (unit == "cm") {
			val1 *= 0.01;
			length.push_back(val1);
			sum += val1;
			unit = " ";
			otherdenyer(i, val1);
		}
		else if(unit =="m"){ 
			{}
			length.push_back(val1);
			sum += val1;
			unit = " "; 
			otherdenyer(i, val1);
		}
		else if (unit == "in") {
			val1 *= 0.0254;
			length.push_back(val1);
			sum += val1;
			unit = " ";	
			otherdenyer(i, val1);
		}
		else if (unit == "ft") {
			//1ft == 12in == 12*0.0254m
			constexpr double fttom = 12 * 0.0254;
			val1 *= fttom;
			length.push_back(val1);
			sum += val1;
			unit = " ";
			otherdenyer(i, val1);
		}
		else {
			cout << "Denied.Please enter another length followed by(cm,m,in,ft).\n";
			--i;
			}
		j = i;
	}

	cout << "最小値は" << miniv << "m, 最大値は" << maxv << "m, 値の個数は" << j + 1 << ", 値の合計は" << sum << "mです。\n";
	cout << "入力された値を全て昇順に書き出します。\n";
	sort(length);
	for (double x : length) {
		cout << x << '\n';
	}
	return 0;
}
