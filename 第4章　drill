ドリル 5.

#include "../../std_lib_facilities.h"

int main()
{

	double val1, val2;
	cout << "入力された2つの整数を小さい順に表示します。|を入力すると終了します。\n";

	while (cin >> val1 >> val2) {
		if (val1 > val2) {
			cout << "the smaller value is: " << val2 << ", the larger value is: " << val1 << '\n';
			if (val1 - val2 < 1.0 / 100)
				cout << "the numbers are almost equal\n";
		}
		else if (val1 < val2) {
			cout << "the smaller value is: " << val1 << ", the larger value is: " << val2 << '\n';
			if (val2 - val1 < 1.0 / 100)
				cout << "the numbers are almost equal\n";
		}
		else  {
			cout << "the numbers are equal\n";
		}
		
	}
	return 0;
}

ドリル 6.

#include "../../std_lib_facilities.h"

int main()
{

	double val1 = 0;
	double max,mini;

	cout << "入力された数字の最大と最小を追跡します。|を入力すると終了します。\n";

	for (int i = 0; cin >> val1; ++i) {
		if (i == 0) {
			max = val1;
			mini = val1;
		}
		else if (i != 0 && val1 > max) {
			max = val1;
			cout << "the largest so far\n";
		}
		else if (i != 0 && val1 < mini) {
			mini = val1;
			cout << "the smallest so far\n";
		}
		else {}
		
	}
	return 0;
}


7.

#include "../../std_lib_facilities.h"

int main()
{
	vector<double> val;
	cout << "Please enter a length followed by(cm,m,in,ft)\n";
	string length_unit = " ";
	double small_val = 0.0;
	double large_val = 0.0;
	double new_val = 0.0;
	for (int i = 0; cin >> new_val >> length_unit; ++i) {
		if (length_unit == "cm")
			new_val == new_val;					//should i replace here to  {}  ? or nothing?
		else if (length_unit == "m")
			new_val *= 100;
		else if (length_unit == "in")
			new_val *= 2.54;
		else if (length_unit == "ft")
			new_val *= (12 * 2.54);

		if(i == 0)
		{
			cout << "Please enter the second length followed by(cm,m,in,ft)\n";
			val.push_back(new_val);
		}

		else
		{
			sort(val);
			small_val = val[0];
			large_val = val[val.size() - 1];

			if (new_val < small_val)
				cout << new_val << "cm. the shortest so far\n";
			else if (new_val>large_val)
				cout << new_val << "cm. the longest so far\n";
			else
				cout << "Please enter another number\n";
			val.push_back(new_val);
		}

	}
	return 0;
}

8.

#include "../../std_lib_facilities.h"




vector<double> val(1);

void setvallength(int x, double length) {
	double small_val = 0.0;
	double large_val = 0.0;

	if (x == 0)
	{
		cout << "Please enter the second length followed by(cm,m,in,ft)\n";
		val.push_back(length);
	}

	else
	{
		sort(val);
		small_val = val[0];
		large_val = val[val.size() - 1];

		if (length < small_val)
			cout << length << "cm. the shortest so far\n";

		else if (length > large_val)
			cout << length << "cm. the longest so far\n";
		
		else
			cout << "Please enter another number\n";

		val.push_back(length);
	}
}

int main()
{
	cout << "Please enter a length followed by(cm,m,in,ft)\n";
	double new_val = 0.0;
	string length_unit = " ";

	for (int i = 0; cin >> new_val >> length_unit; ++i) {

		if (length_unit == "cm") {
			setvallength(i, new_val);
		}
		else if (length_unit == "m") {
			new_val *= 100;
			setvallength(i, new_val);
		}
		else if (length_unit == "in") {
			new_val *= 2.54;
			setvallength(i, new_val);
		}
		else if (length_unit == "ft") {
			new_val *= (12 * 2.54);
			setvallength(i, new_val);
		}

		else
		{
			cout << "I don't know a unit called '" << length_unit << "'.\nPlease enter another length.\n";
			new_val = 0.0;
			length_unit = " ";
			--i;
		}

	}
	return 0;
}

9.

#include "../../std_lib_facilities.h"




vector<double> val(1);

void setvallength(int x, double length) {
	double small_val = 0.0;
	double large_val = 0.0;

	if (x == 0)
	{
		cout << "Please enter the second length followed by(cm,m,in,ft)\n";
		val.push_back(length);
	}

	else
	{
		sort(val);
		small_val = val[0];
		large_val = val[val.size() - 1];

		if (length < small_val)
			cout << length << "m. the shortest so far\n";

		else if (length > large_val)
			cout << length << "m. the longest so far\n";
		
		else
			cout << "Please enter another number\n";

		val.push_back(length);
		
	}
}

int main()
{
	cout << "Please enter a length followed by(cm,m,in,ft)\n";
	double new_val = 0.0;
	string length_unit = " ";
	int i;
	for (i = 0; cin >> new_val >> length_unit; ++i) {

		if (length_unit == "cm") {
			new_val *= 0.01;
			setvallength(i, new_val);
		}
		else if (length_unit == "m") {
			setvallength(i, new_val);
		}
		else if (length_unit == "in") {
			new_val *= 0.0254;
			setvallength(i, new_val);
		}
		else if (length_unit == "ft") {
			new_val *= (12 * 0.0254);
			setvallength(i, new_val);
		}

		else
		{
			cout << "I don't know a unit called '" << length_unit << "'.\nPlease enter another length.\n";
			new_val = 0.0;
			length_unit = " ";
			--i;
		}
		
	}
	double sum = 0.0;
	for (double y : val)
		sum += y;

	cout << "入力された値の個数は" << i << "です。\nその数を全て足すと" << sum << "mです。\n";


	return 0;
}

