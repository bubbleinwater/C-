P95 円、ユーロ、ポンドをドルに変換するプログラム。

#include "../../std_lib_facilities.h"

int main()
{
	constexpr double dollar_per_yen = 0.00887;                          //I'm not sure about my english;
　constexpr double dollar_per_euro = 1.0748;
	constexpr double dollar_per_pound = 1.2384;
	double amount = 0;
	char unit = ' ';

	cout << "Please enter an amount of money followed by a unit (y or e or p):\n";

	cin >> amount >> unit;

	if (unit == 'y')
		cout << amount << "yen == " << amount*dollar_per_yen << "dollars\n";
	else if (unit == 'e')
		cout << amount << "euro == " << amount*dollar_per_euro << "dollars\n";
	else if (unit == 'p')
		cout << amount << "pound == " << amount*dollar_per_pound << "dollars\n";
	else
		cout << "Sorry, I don't know a unit called '" << unit << "'\n";

	return 0;
}

switchに書き換える
#include "../../std_lib_facilities.h"

int main()
{
	constexpr double dollar_per_yen = 0.00887;
	constexpr double dollar_per_euro = 1.0748;
	constexpr double dollar_per_pound = 1.2384;
	double amount = 0;
	char unit = ' ';

	cout << "Please enter an amount of money followed by a unit (y or e or p):\n";

	cin >> amount >> unit;

	switch (unit) {
	case'y':
		cout << amount << "yen == " << amount*dollar_per_yen << "dollars\n";
		break;
	case'e':
		cout << amount << "euro == " << amount*dollar_per_euro << "dollars\n";
		break;
	case'p':
		cout << amount << "pound == " << amount*dollar_per_pound << "dollars\n";
		break;
	default:
		cout << "Sorry, I don't know a unit called '" << unit << "'\n";
		break;
	}

	return 0;
}

yuanとkrone

#include "../../std_lib_facilities.h"

int main()
{
	constexpr double dollar_per_jyen = 0.00887;
	constexpr double dollar_per_euro = 1.0748;
	constexpr double dollar_per_pound = 1.2384;
	constexpr double dollar_per_cyuan = 0.14477;
	constexpr double dollar_per_krone = 0.144693;
	double amount = 0;
	char unit = ' ';

	cout << "Please enter an amount of money followed by a unit (j or e or p or k or c):\n";

	cin >> amount >> unit;

	switch (unit) {
	case'j':
		cout << amount << "yen == " << amount*dollar_per_jyen << "dollars\n";
		break;
	case'e':
		cout << amount << "euro == " << amount*dollar_per_euro << "dollars\n";
		break;
	case'p':
		cout << amount << "pound == " << amount*dollar_per_pound << "dollars\n";
		break;
	case'c':
		cout << amount << "gen == " << amount*dollar_per_cyuan << "dollars\n";
		break;
	case'k':
		cout << amount << "krone ==" << amount*dollar_per_krone << "dollars\n";
		break;
	default:
		cout << "Sorry, I don't know a unit called '" << unit << "'\n";
		break;
	}

	return 0;
}

P101　charとそれを代入したintを出力するプログラム

#include "../../std_lib_facilities.h"

int main()
{

	char a = 'a';                                                     //int aa=97;
	int aa = a;                                                       //char a = aa;

	while (aa <= 122) {
		cout << a << '\t' << aa << '\n';
		++a;                                                      //++aa;
		aa = a;                                                   //a = aa;
	}

	return 0;
}

rewrite using for statement

#include "../../std_lib_facilities.h"

int main()
{
	char a = 'a';
	for (int aa = 97; aa <= 122; ++aa) {
		a = aa;
		cout << a << '\t' << aa << '\n';
	}

	return 0;
}

with ABC and 123

#include "../../std_lib_facilities.h"

int main()
{
	char a = 'a';
	for (int aa = 97; aa <= 122; ++aa) {
		a = aa;
		cout << a << '\t' << aa << '\n';
	}
	cout << '\n';
	for (int AA = 65; AA <= 90; ++AA) {
		a = AA;
		cout << a << '\t' << AA << '\n';
	}
	cout << '\n';
	for (int digit = 49; digit <= 57; ++digit) {
		a = digit;
		cout << a << '\t' << digit << '\n';
	}
	//
	//char A = 'A';
	//int AA = A;
	//cout << "Ais" << AA << '\n';
	//char a1 = '9';
	//int aa1 = a1;
	//cout << aa1 << '\n';

	return 0;
}

p102
#include "../../std_lib_facilities.h"


int square(int x)
{
	int sum = 0;
	for (int i = 0; i < x; i++) {
		sum += x;
	}
	return sum;
}
int main()
{
	int num = 0;
	cout << "整数を一つ入力してください\n";
	cin >> num;
	cout << "2乗すると" << square(num) << "です\n";

	return 0;
}

