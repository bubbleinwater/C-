練習問題2.
エラーのリスト
  ctok関数内でkをintと宣言しているがdoubleと宣言すべき。
  ctok関数でkを返すべきところ、return intとしている。さらに式文が　;　で閉じられていない。
  main関数内で宣言していないdにcinで入力しようとしている。ここではcin >> c;とすべき
  セ氏の入力をうながすプロンプト文を書くべき。
  ctok関数に渡す引数が"c"と、文字列cを渡すように書かれているがdouble k = ctok(c); とすべき
  Coutと書かれているがcoutと書くべき
  
練習問題3.

#include "../../std_lib_facilities.h"

double ctok(double c)
{
	double k = c + 273.15;
	return k;
}

int main()
{
	cout << "ケルビンに変換します。セ氏を入力してください。\n";
	double c = 0;
	cin >> c;
	if (c < -273.15) simple_error("不正な入力: 下限値を超えています。\n");
	double k = ctok(c);
	cout << k << '\n';

	return 0;
}

練習問題4.
#include "../../std_lib_facilities.h"

double ctok(double c)
//事前条件: 引数は-273.15以上であり、
//事後条件: 0以上の値を返す。
{

	if (!(c >= -273.15)) simple_error("不正な入力: 下限値を超えています。\n");
	double k = c + 273.15;
	if (k < 0) simple_error("error. ctok() post-condition");
	return k;
}

int main()
{
	cout << "ケルビンに変換します。セ氏を入力してください。\n";
	double c = 0;
	cin >> c;
	double k = ctok(c);
	cout << k << '\n';

	return 0;
}


練習問題5.

#include "../../std_lib_facilities.h"

double ctok(double c)
//事前条件: 引数は-273.15以上であり、
//事後条件: 0以上の値を返す。
{

	if (!(c >= -273.15)) simple_error("不正な入力: 下限値を超えています。\n");
	double k = c + 273.15;
	if (k < 0) simple_error("error. ctok() post-condition");
	return k;
}

double ktoc(double k)
//事前条件: 引数は0以上であり、
//事後条件: -273.15以上の値を返す。
{

	if (!(k >= 0)) simple_error("不正な入力: 下限値を超えています。\n");
	double c = k - 273.15;
	if (c < -273.15) simple_error("error. ktoc() post-condition");
	return c;
}


int main()
{
	cout << "値を入力した後に単位(セ氏ならばc、ケルビンならばk)を入力してください。\n";
	double v = 0;
	char unit;
	cin >> v >> unit;
	if (unit == 'c') {
		double k = ctok(v);
		cout <<v << "℃は、"<< k << "ケルビンです\n";
	}
	if (unit == 'k') {
		double c = ktoc(v);
		cout << v << "ケルビンは、" << c << "℃です。\n";
	}
	return 0;
}

練習問題6. 

#include "../../std_lib_facilities.h"

double ctof(double c)
//事前条件: 引数は-273.15以上であり、
//事後条件: 0以上の値を返す。
{

	if (!(c >= -273.15)) simple_error("不正な入力: 下限値を超えています。\n");
	double f = c * 9 / 5 + 32;
	if (f < -459.67) simple_error("error. ctok() post-condition");
	return f;
}

double ftoc(double f)
//事前条件: 引数は0以上であり、
//事後条件: -273.15以上の値を返す。
{

	if (!(f >= -459.67)) simple_error("不正な入力: 下限値を超えています。\n");
	double c = (f - 32) * 5/9;
	if (c < -273.15) simple_error("error. ftoc() post-condition");
	return c;
}


int main()
{
	cout << "値を入力した後に単位(セ氏ならばc、華氏ならばf)を入力してください。\n";
	double v = 0;
	char unit;
	cin >> v >> unit;
	if (unit == 'c') {
		double f = ctof(v);
		cout <<"摂氏"<<v << "度は、華氏"<< f << "度です。\n";
	}
	if (unit == 'f') {
		double c = ftoc(v);
		cout <<"華氏"<< v << "度は、摂氏" << c << "度です。\n";
	}
	return 0;
}

練習問題7. 

#include "../../std_lib_facilities.h"

int main()
{
	double a = 0, b = 0, c = 0;

	cout << "2次方程式の解を求めます。\nax^2+bx+c=0の形のa,b,cを順に入力してください。\n";

	cin >> a >> b >> c;

	double x1=0, x2=0;
	double D = (b*b) - (4 * a*c);
	double postcon1, postcon2;

	if (D>0) {
		x1 = (-b + sqrt(D)) / 2 * a;
		x2 = (-b - sqrt(D)) / 2 * a;

		postcon1 = a*x1*x1 + b*x1 + c;
		postcon2 = a*x2*x2 + b*x2 + c;

		if (!(postcon1 == 0 && postcon2 == 0))simple_error("error post-condition");

		cout <<"("<<a<<")x^2+("<<b<<")x+("<<c<< ")=0 の2つの解は" << x1 << "と" << x2<<"です。\n";
	}

	else if (D == 0) {
		x1 = -b / (2 * a);
		postcon1 = a*x1*x1 + b*x1 + c;
		if (postcon1 != 0) simple_error("error post-condition");
		cout <<"("<< a << ")x^2+(" << b << ")x+(" << c << ")=0 の解は一つで、" << x1 << "です。\n";
	}

	else if (D < 0) {
		cout << "実数の範囲で解はありません。\n";
	}



	return 0;
}

練習問題8.

#include "../../std_lib_facilities.h"

int main()
{
	int x = 0;
	int num,sum = 0;
	vector<int> nums;
	cout << "合計したい値の数を入力してください。\n";
	cin >> x;

	cout << "整数を入力し、最後に垂直バー(|)を入力してください。\n";
	for (int i = 0; cin >> num; ++i) {
		nums.push_back(num);
	}
	for (int i = 0; i < x; ++i) { sum += nums[i]; }

	cout << "最初の" << x << "個の数字( ";
	for (int i = 0; i < x;++i)cout << nums[i]<<" ";
	cout << ")の合計は" << sum << "です。\n";

	return 0;
}

