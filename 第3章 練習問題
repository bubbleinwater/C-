#include "../../std_lib_facilities.h"

int main()
{
	cout << "kmに変換します。単位がマイルの値を入力してください。\n";
	double length;
	cin >> length;

//mileをkmに変換して出力
	cout << length << "mileは" << length * 1.609 << "kmです。\n";

	keep_window_open();
	return 0;
}

//練習問題4.

#include "std_lib_facilities.h"

int main()
{
	int val1, val2;
	cout << "整数を2つ入力してください\n";
	cin >> val1 >> val2;

	if (val1 - val2 < 0) 
		cout << "最小値は" << val1 << " 最大値は" << val2 << "です。\n";
	else if (val1 - val2 == 0)
		cout << "2つの値は等しいです。\n";
	else
		cout << "最小値は" << val2 << " 最大値は" << val1 << "です。\n";
	
	cout << "2数の合計は" << val1 + val2
		<< "\n差の絶対値は";
	if (val1 - val2 < 0)
		cout << (val1 - val2)* -1 << "です。\n";
	else if (val1 - val2 > 0)
		cout << val1 - val2 << "です。\n";
	else
		cout << "差はありません。\n";
	
	cout << "積は" << val1 * val2 << "です。\n";
	double div = (double)val1 / val2;
	cout << "比率は" << div << "です。\n";

	keep_window_open();
	return 0;
}

練習問題5.

#include "std_lib_facilities.h"

int main()
{
	double val1, val2;
	cout << "値を2つ入力してください\n";
	cin >> val1 >> val2;

	if (val1 - val2 < 0) 
		cout << "最小値は" << val1 << " 最大値は" << val2 << "です。\n";
	else if (val1 - val2 == 0)
		cout << "2つの値は等しいです。\n";
	else
		cout << "最小値は" << val2 << " 最大値は" << val1 << "です。\n";
	
	cout << "2数の合計は" << val1 + val2
		<< "\n差の絶対値は";
	if (val1 - val2 < 0)
		cout << (val1 - val2)* -1 << "です。\n";
	else if (val1 - val2 > 0)
		cout << val1 - val2 << "です。\n";
	else
		cout << "差はありません。\n";
	
	cout << "積は" << val1 * val2 << "です。\n";
	double div = val1 / val2;
	cout << "比率は" << div << "です。\n";

	keep_window_open();
	return 0;
}

練習問題6.

#include "../../std_lib_facilities.h"

int main()
{
	cout << "整数値を3つ入力してください。\n";
	int val1, val2, val3;
	while (cin >> val1 >> val2 >> val3)
	{

		int tmp;
		if (val1 > val2)
		{
			tmp = val1;
			val1 = val2;
			val2 = tmp;
		}
		if (val2 > val3)
		{
			tmp = val2;
			val2 = val3;
			val3 = tmp;
		}
		if (val1 > val2)
		{
			tmp = val1;
			val1 = val2;
			val2 = tmp;
		}

		cout << "(" << val1 << "," << val2 << "," << val3 << ")\n";

	}

	keep_window_open();
	return 0;
}

練習問題7.

#include "std_lib_facilities.h"

int main()
{
	cout << "名前など、文字列を3つ入力してください。辞書式に出力します。\n";
	string st1, st2, st3;
	string tmpst = " ";

while(cin >> st1 >> st2 >> st3){
	if (st1 > st2) {
		tmpst = st1;
		st1 = st2;
		st2 = tmpst;
	}

	if (st2 > st3) {
		tmpst = st2;
		st2 = st3;
		st3 = tmpst;
	}

	if (st1 > st2) {
		tmpst = st1;
		st1 = st2;
		st2 = tmpst;
	}

	cout << "(" << st1 << "," << st2 << "," << st3 << ")\n";
}

	return 0;
}


練習問題 8.

#include "std_lib_facilities.h"

int main()
{
	cout << "整数を入力してください。\n";
	int num;
	while (cin >> num) {

		if (num % 2 != 0)
			cout << "値" << num << "は奇数です。\n";
		else
			cout << "値" << num << "は偶数です。\n";
	}

	return 0;
}


　練習問題　9.

#include "std_lib_facilities.h"

int main()
{
	cout << "値をzeroやoneのように文字で入力してください。\n";
	string stnum;
	int num;
	while (cin >> stnum) {
		if (stnum == "zero" || stnum == "Zero" || stnum == "ZERO")
			num = 0;
		else if (stnum == "one" || stnum == "One" || stnum == "ONE")
			num = 1;
		else if (stnum == "two" || stnum == "Two" || stnum == "TWO")
			num = 2;
		else if (stnum == "three" || stnum == "Three" || stnum == "THREE")
			num = 3;
		else if (stnum == "four" || stnum == "Four" || stnum == "FOUR")
			num = 4;
//		else if (stnum == "" || stnum == "" || stnum == "")
//			num =
		else {
			cout << "not a number I know.\n";
			num = -1;
		}

		if (num != -1)
			cout << "入力された数字は" << num << "です。\n";
	}
	return 0;
}


練習問題 10.
#include "std_lib_facilities.h"

int main()
{
	cout << "演算の種類と数字を(* 1 2)のように入力してください。\n";
	char ch;
	int val1, val2;

	while (cin >> ch >> val1 >> val2) {
		if (ch == '+')
			cout << "答えは" << val1 + val2 << "です。\n";
		if (ch == '-')
			cout << "答えは" << val1 - val2 << "です。\n";
		if (ch == '*')
			cout << "答えは" << val1 * val2 << "です。\n";
		if (ch == '/')
			cout << "答えは" << val1 / val2 << "です。\n";
	}
	return 0;
}


練習問題 11.
#include "../../std_lib_facilities.h"

int main()
{
	int penny = 0;
	int nickel = 0;
	int dime = 0;
	int quarter = 0;
	int half_dollar = 0;
	int dollar = 0;
	cout << "How many pennies do you have? :";
	cin >> penny;
	cout << "How many nickels do you have? :";
	cin >> nickel;
	cout << "How many dimes do you have? :";
	cin >> dime;
	cout << "How many quarters do you have? :";
	cin >> quarter;
	cout << "How many half dollars do you have? :";
	cin >> half_dollar;
	cout << "How many dollars do you have? :";
	cin >> dollar;
	cout << '\n';
	if (penny)
		cout << "You have " << penny << " pennies.\n";
	if (nickel)
		cout << "You have " << nickel << " nickels.\n";
	if (dime)
		cout << "You have " << dime << " dimes.\n";
	if (quarter)
		cout << "You have " << quarter << " quarters.\n";
	if (half_dollar)
		cout << "You have " << half_dollar << " half dollars.\n";
	if (dollar)
		cout << "You have " << dollar << " dollars.\n";

	cout << "The value of all of your coins is " << penny + (nickel * 5) + (dime * 10)
		+ (quarter * 25) + (half_dollar * 50) + (dollar * 100) << " cents.\n";

	return 0;
}
練習問題　11-2
#include "../../std_lib_facilities.h"

int main()
{
	int penny = 0;
	int nickel = 0;
	int dime = 0;
	int quarter = 0;
	int half_dollar = 0;
	int dollar = 0;
	int sum = 0;
	int dollar_sum = 0;
	int cent_sum = 0;

	cout << "How many pennies do you have? :";
	cin >> penny;
	cout << "How many nickels do you have? :";
	cin >> nickel;
	cout << "How many dimes do you have? :";
	cin >> dime;
	cout << "How many quarters do you have? :";
	cin >> quarter;
	cout << "How many half dollars do you have? :";
	cin >> half_dollar;
	cout << "How many dollars do you have? :";
	cin >> dollar;
	cout << '\n';
	if (penny == 1)
		cout << "You have " << penny << " penny.\n";
	else
		cout << "You have " << penny << " pennies.\n";
	if (nickel == 1)
		cout << "You have " << nickel << " nickel.\n";
	else
		cout << "You have " << nickel << " nickels.\n";
	if (dime == 1)
		cout << "You have " << dime << " dime.\n";
	else
		cout << "You have " << dime << " dimes.\n";
	if (quarter == 1)
		cout << "You have " << quarter << " quarter.\n";
	else
		cout << "You have " << quarter << " quarters.\n";
	if (half_dollar == 1)
		cout << "You have " << half_dollar << " half dollar.\n";
	else
		cout << "You have " << half_dollar << " half dollars.\n";
	if (dollar == 1)
		cout << "You have " << dollar << " dollar.\n";
	else
		cout << "You have " << dollar << " dollars.\n";

	sum = penny + (nickel * 5) + (dime * 10)
		+ (quarter * 25) + (half_dollar * 50) + (dollar * 100);
	//cout << "sum is" << sum << ".\n";                                                    //check

	if (sum == 0)
		cout << "oh,you have no money.\n";
	else if (sum == 1)
		cout << "The value of all of your coins is 1 cent.\n";
	else if (100 > sum && sum > 1)
		cout << "The value of all of your coins is" << sum << " cents.\n";
	else if (sum >= 10*10) {											//if sum is greater than 100.
		cent_sum = sum % 100;                                       //now Im about trying to use "%"
		dollar_sum = (sum - cent_sum)/100;
		if (dollar_sum == 1) {
			if (cent_sum <= 1)
				cout << "The value of all of your coins is " << dollar_sum << " dollar " << cent_sum << " cent.\n";
			else
			{
				cout << "The value of all of your coins is " << dollar_sum << " dollar " << cent_sum << " cents.\n";
			}
		}
		else {
			if (cent_sum <= 1)
				cout << "The value of all of your coins is " << dollar_sum << " dollars " << cent_sum << " cent.\n";
			else
				cout << "The value of all of your coins is " << dollar_sum << " dollars " << cent_sum << " cents.\n";
		}
	}

	return 0;
}
