#include"Chrono.h"


int main() 
try {

	Chrono::Date today = {1999,Chrono::Month::apr,15};/*={1978, Month::jun, 25 };*/
//	Chrono::Date today = { 1994, Chrono::Month::jul,18 };
	cout <<"today is "<< today << '\n';
	Chrono::Day_of_the_week dd = Chrono::whats_the_day(today);
	cout << dd<<'\n';

	today.Chrono::Date::add_day(1);
	Chrono::Date tomorrow = today;

	cout <<"tomorrow is "<< tomorrow << '\n';

	dd = Chrono::whats_the_day(tomorrow);
	cout << dd << '\n';
	cout << "add_year(2) to today. ";

	today.add_year(2);

	cout << today << "\n";
	dd = Chrono::whats_the_day(today);
	cout << dd << '\n';


//	cout << "2021: " << Chrono::leapyear(2021);//0 for false

	keep_window_open();
	return 0;
}
catch (Chrono::Date::Invalid) {
	cerr << "invalid date\n";
	keep_window_open();
}
