#include "../../std_lib_facilities.h"

int main()
{
	vector<double> val(2);
	cout << "2つの整数を入力\n";

	while (cin>>val[0] && cin>>val[1]) {
		sort(val);
		if (val[0] == val[1])
			cout << "the numbers are equal\n";
		else
			cout <<"the smaller value is: "<< val[0] 
			<<" and the larger value is: "<< val[1]<<'\n';
	}
	return 0;
}

5.

#include "../../std_lib_facilities.h"

int main()
{
	vector<double> val(2);
	cout << "2つの整数を入力\n";

	while (cin>>val[0] && cin>>val[1]) {
		sort(val);
		if (val[0] == val[1])
			cout << "the numbers are equal\n";
		else if (val[0] < val[1]) {
			cout << "the smaller value is: " << val[0]
				<< " and the larger value is: " << val[1] << '\n';
			if ((val[1] - val[0]) < 1.0/100)
				cout << "the numbers are almost equal\n";
		}
	}
	return 0;
}


6.

#include "../../std_lib_facilities.h"

int main()
{
	vector<double> val;
	cout << "整数を一つ入力してください。\n";
	double small_val = 0.0;
	double large_val = 0.0;
	double new_val = 0.0;
	for (int i = 0; cin >> new_val; ++i) {
		if (i != 0) {
			sort(val);
			small_val = val[0];
			large_val = val[val.size() - 1];

			if (new_val < small_val)
				cout << new_val << " the smallest so far\n";
			else if (new_val>large_val)
				cout << new_val << " the largest so far\n";
			else
				cout << "Please enter another number\n";
			val.push_back(new_val);
		}

		else {
			cout << "Please enter second number\n";
			val.push_back(new_val);
		}
	}
	return 0;
}
