#include "../../std_lib_facilities.h"

int main()
{
	vector<int> val(2);                                   //I don't kwon why yet(or i just could not read the english message)
	cout << "2つの整数を入力\n";				//, but (2) is needed after val

	while (cin>>val[0] && cin>>val[1]) {
		sort(val);
		cout <<"the smaller value is: "<< val[0] <<" and the larger value is: "<< val[1]<<'\n';
	}
	return 0;
}

3.


#include "../../std_lib_facilities.h"

int main()
{
	vector<int> val(2);
	cout << "2つの整数を入力\n";

	while (cin>>val[0] && cin>>val[1]) {
		sort(val);
		if (val[0] == val[1])
			cout << "the numbers are equal\n";
		else
			cout <<"the smaller value is: "<< val[0] 
			<<" and the larger value is: "<< val[1]<<'\n';
	}
	return 0;
}

